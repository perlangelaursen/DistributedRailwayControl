		<declaration>int res[3] = {-1, -1, -1};
int[0,2] result;
int tid = -1;
int lockedBy = -1;
int stem;
int connected;

bool reserve(int tid, int sid){
  for(i : int[0,2]) {
    if (CBs[id][i] == sid &amp;&amp; res[i] == -1) {
      res[i] = tid;
      return true;
    }
  }
  return false;
}

int[0,2] lock(int tid, int s1, int s2){
  if(lockedBy == -1 &amp;&amp; (s1 != s2) &amp;&amp; (s1 == CBs[id][0] || s2 == CBs[id][0])){
      int s = 0;
      for (i:int[0,2]){
        if(CBs[id][i] == s1){
           if(res[i] == tid) {
               s++;
           }
        }
        if(CBs[id][i] == s2 ){
            if(res[i] == tid){
               s++;
            }
        }
      }
      if (s==2  &amp;&amp; connected != s1 &amp;&amp;  connected != s2){
        return 2;
      } else if (s==2) {
        return 1;
      }
    }
    return 0;
}


bool clear(int tid){
  if (lockedBy == tid){
      lockedBy = -1;

      for (i : int[0,2]) 
      {
        if(res[i] == tid){
            res[i] = -1;
        }
      }
      return true;
    }
    return false;
}

void updateConnected(){
    if(connected == CBs[id][1]){
        connected := CBs[id][2];
    } else {
        connected := CBs[id][1];
    }
