	<queries>
		<query>
			<formula>A[] forall(i:CB_id) (not(CB(i).Initial) &amp;&amp; not(CB(i).Switching) &amp;&amp; boxes[i] != -1) imply (Point(boxes[i]).Plus &amp;&amp; CB(i).connected == CBs[i][1]) || (Point(boxes[i]).Minus &amp;&amp; CB(i).connected == CBs[i][2])
